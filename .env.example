# 示例环境变量

# MySQL
MYSQL_ROOT_PASSWORD=change_me_root_pw
MYSQL_DATABASE=scut_shop
MYSQL_USER=scut_user
MYSQL_PASSWORD=change_me_db_pw
DB_HOST=db
DB_PORT=3306
DB_NAME=scut_shop
DB_USER=scut_user
DB_PASSWORD=change_me_db_pw

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# JWT
JWT_SECRET=replace_with_a_long_random_secret
JWT_EXPIRES_MIN=60

# Mail (MailHog for development)
MAIL_HOST=mailhog
MAIL_SMTP_PORT=1025
MAIL_WEB_PORT=8025
MAIL_USER=
MAIL_PASSWORD=

# App
APP_PORT=8080
PAYMENT_MOCK=true

# Admin initial account (for DB init script)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
# If ADMIN_PASSWORD is empty, one will be generated and printed in db logs
ADMIN_PASSWORD=

# JWT refresh token expiry (days)
JWT_REFRESH_EXPIRES_DAYS=7

# Feature flags
# Set to false to try a failing payment for testing
PAYMENT_FORCE_FAILURE=false
